    <script>
        let currentSection = 1;
        function nextSection(sectionId) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
            currentSection++;
            document.getElementById('progress-fill').style.width = (currentSection / 3 * 100) + '%';
        }

        function showHint() {
            document.getElementById('hintBox').classList.add('show');
        }

        function checkPassword() {
            const input = document.getElementById('passwordInput').value.trim().toUpperCase();
            const errorMsg = document.getElementById('errorMsg');
            if (input === 'DISNEY') {
                nextSection('reveal-section');
                createConfetti();
            } else {
                errorMsg.classList.add('show');
                setTimeout(() => errorMsg.classList.remove('show'), 3000);
            }
        }

        document.getElementById('passwordInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') checkPassword();
        });

        function createConfetti() {
            const colors = ['#ff6b9d', '#c44569', '#8b4789', '#ffb347', '#ffd700'];
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.animationDelay = Math.random() * 3 + 's';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                document.body.appendChild(confetti);
                setTimeout(() => confetti.remove(), 3000);
            }
        }
    </script>
